<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form method="post" action="/courses/{{courses._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{courses.name}}"
      />
    </div>

     <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{courses.description}}
      </textarea>

    </div>
     <div class="form-group">
      <label for="videoID">Video bài giảng</label>
      <input
        type="text"
        class="form-control"
        id="videoID"
        name="videoID"
        value="{{courses.videoID}}"
      />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
  </form>
</div>